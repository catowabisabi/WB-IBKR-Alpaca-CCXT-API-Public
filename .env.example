# ======= 🌐 前端可用的公開變數（NEXT_PUBLIC_） =======

# 本機測試 WebSocket 新交易訊號處理 URL
NEXT_PUBLIC_LOCALHOST_NEW_SIGNAL_URL=http://localhost:3000/websocket-handler/new-signal

# 雲端部署的後端伺服器主機名稱
NEXT_PUBLIC_CLOUD_WB_SERVER_URL=https://your-domain.com

# 本機開發的 Next.js 網址
NEXT_PUBLIC_LOCALHOST_URL=http://localhost:3000

# 本機後端 API 運行在 port 3824 的 URL
NEXT_PUBLIC_LOCALHOST_URL_3824=http://localhost:3824

# Google 登入回呼網址的 base（需與 Google Console 設定一致）
NEXT_PUBLIC_GOOGLE_CALLBACK_URL_HEAD=https://domain.com

# 前端使用的 API 金鑰（如需限制存取）
NEXT_PUBLIC_ADMIN_API_KEY=your_public_api_key_here


# ======= 🔐 伺服器私密變數 =======

# 後端 API base URL，供內部呼叫用（可與上方網址相同）
API_BASE_URL=https://domain.com/api

# Google 登入的 OAuth 客戶端 ID（Google Cloud Console 取得）
GOOGLE_OAUTH_CLIENT_ID=your_google_client_id

# Google 登入的 OAuth 客戶端密鑰
GOOGLE_OAUTH_CLIENT_SECRET=your_google_client_secret

# JWT 私鑰，用於簽發/驗證使用者登入 Token
JWT_KEY=your_jwt_secret

# MongoDB 連線字串（請從 MongoDB Atlas 或自架的資料庫複製）
MONGODB_CONNECTION_STRING=


# ======= 🤖 Telegram 整合變數 =======

# Telegram Bot 的 token（由 BotFather 建立）
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# Telegram 使用者 ID（例如：CAT = 自己）
TG_ID_CAT=your_telegram_user_id_1

# Telegram 使用者 ID（例如：CHO = 夥伴或測試帳號）
TG_ID_CHO=your_telegram_user_id_2


# ======= 🔐 GitHub Actions 部署用變數（儲存在 GitHub Secrets 中） =======

# VPS SSH 私鑰（用於 GitHub Actions 自動部署）
HOSTINGER_WB_VPS_SSH=your_private_ssh_key_for_hostinger
